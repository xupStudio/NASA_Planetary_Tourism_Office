<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_launcher"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.27"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/iv_sun"
        android:layout_width="800dp"
        android:layout_height="800dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline_sun"
        android:src="@mipmap/sun" />

    <TextView
        android:id="@+id/tv_the_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:textSize="30dp"
        android:text="The sun" />

    <ImageView
        android:id="@+id/solar_line1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"
        android:scaleType="fitXY"
        android:src="@mipmap/solar_line" />

    <ImageView
        android:id="@+id/iv_mercury"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/solar_line1"
        app:layout_constraintBottom_toBottomOf="@+id/solar_line1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/mercury" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_mercury"
        app:layout_constraintLeft_toLeftOf="@+id/iv_mercury"
        app:layout_constraintRight_toRightOf="@+id/iv_mercury"
        android:text="mercury"/>

    <ImageView
        android:id="@+id/solar_line2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/solar_line1"
        android:scaleType="fitXY"
        android:src="@mipmap/solar_line" />

    <ImageView
        android:id="@+id/iv_venus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/solar_line2"
        app:layout_constraintBottom_toBottomOf="@+id/solar_line2"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/venus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_venus"
        app:layout_constraintLeft_toLeftOf="@+id/iv_venus"
        app:layout_constraintRight_toRightOf="@+id/iv_venus"
        android:text="venus"/>

    <ImageView
        android:id="@+id/solar_line3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/solar_line2"
        android:scaleType="fitXY"
        android:src="@mipmap/solar_line" />

    <ImageView
        android:id="@+id/iv_earth"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/solar_line3"
        app:layout_constraintBottom_toBottomOf="@+id/solar_line3"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:src="@mipmap/earth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginTop="-5dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_earth"
        app:layout_constraintLeft_toLeftOf="@+id/iv_earth"
        app:layout_constraintRight_toRightOf="@+id/iv_earth"
        android:text="earth"/>

    <ImageView
        android:id="@+id/iv_moon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_earth"
        app:layout_constraintTop_toTopOf="@+id/iv_earth"
        android:layout_marginTop="15dp"
        android:src="@mipmap/moon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_moon"
        app:layout_constraintLeft_toLeftOf="@+id/iv_moon"
        app:layout_constraintRight_toRightOf="@+id/iv_moon"
        android:text="moon"/>

    <ImageView
        android:id="@+id/solar_line4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/solar_line3"
        android:scaleType="fitXY"
        android:src="@mipmap/solar_line" />

    <ImageView
        android:id="@+id/iv_mars"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/solar_line4"
        app:layout_constraintBottom_toBottomOf="@+id/solar_line4"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/mars" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/iv_mars"
        app:layout_constraintLeft_toLeftOf="@+id/iv_mars"
        app:layout_constraintRight_toRightOf="@+id/iv_mars"
        android:text="mars"/>

    <ImageView
        android:id="@+id/solar_line5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/solar_line4"
        android:scaleType="fitXY"
        android:src="@mipmap/solar_line" />

    <ImageView
        android:id="@+id/iv_jupiter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/solar_line5"
        app:layout_constraintBottom_toBottomOf="@+id/solar_line5"
        android:layout_marginRight="90dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/mars" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/iv_jupiter"
        app:layout_constraintLeft_toLeftOf="@+id/iv_jupiter"
        app:layout_constraintRight_toRightOf="@+id/iv_jupiter"
        android:text="jupiter"/>

    <ImageView
        android:id="@+id/solar_line6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/solar_line5"
        android:scaleType="fitXY"
        android:src="@mipmap/solar_line" />

    <ImageView
        android:id="@+id/iv_saturn"
        android:layout_width="90dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/solar_line6"
        app:layout_constraintBottom_toBottomOf="@+id/solar_line6"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:src="@mipmap/saturn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/iv_saturn"
        app:layout_constraintLeft_toLeftOf="@+id/iv_saturn"
        app:layout_constraintRight_toRightOf="@+id/iv_saturn"
        android:text="saturn"/>

    <ImageView
        android:id="@+id/solar_line7"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/solar_line6"
        android:scaleType="fitXY"
        android:src="@mipmap/solar_line" />

    <ImageView
        android:id="@+id/iv_uranus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/solar_line7"
        app:layout_constraintBottom_toBottomOf="@+id/solar_line7"
        android:layout_marginRight="35dp"
        android:layout_marginTop="-5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/uranus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/iv_uranus"
        app:layout_constraintLeft_toLeftOf="@+id/iv_uranus"
        app:layout_constraintRight_toRightOf="@+id/iv_uranus"
        android:text="uranus"/>

    <ImageView
        android:id="@+id/solar_line8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/solar_line7"
        android:scaleType="fitXY"
        android:src="@mipmap/solar_line" />

    <ImageView
        android:id="@+id/iv_neptune"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/solar_line8"
        app:layout_constraintBottom_toBottomOf="@+id/solar_line8"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@mipmap/uranus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/iv_neptune"
        app:layout_constraintLeft_toLeftOf="@+id/iv_neptune"
        app:layout_constraintRight_toRightOf="@+id/iv_neptune"
        android:text="neptune"/>

    <TextView
        android:id="@+id/tv_go_plan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_round_go_plan"
        android:layout_margin="30dp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        android:textSize="20dp"
        android:text="Go Plan" />

    <ImageView
        android:id="@+id/iv_shutter"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:translationX="-20dp"
        android:translationY="10dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_go_plan"
        app:layout_constraintBottom_toTopOf="@+id/tv_go_plan"
        android:src="@mipmap/shuttle" />

</androidx.constraintlayout.widget.ConstraintLayout>